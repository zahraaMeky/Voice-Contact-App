<LoginScreen>:
    name: "login"
    MDFloatLayout:
        md_bg_color: 0.153, 0.216, 0.302, 1       
        BoxLayout:
            spacing: 10 
            padding:10
            orientation: 'vertical'
            pos_hint: {"center_x": 0.5,"center_y":0.8}
            MDIconButton:
                on_release: app.close_button()
                pos_hint: {"right": 1,"top":1}
                size_hint: None, None
                size: "40dp", "40dp"
                Image:
                    source:"resources/closeicon2.png"
                    size_hint: None, None
                    size: "40dp", "40dp"
            Header:
            # BoxLayout:
            #     orientation: 'vertical'
            #     pos_hint: {"center_x": 0.5,"center_y":0.1}
            MDLabel: 
                text:app.arabicText('اسم المستخدم')
                pos_hint: {"center_x": 0.5}
                font_name:'resources/bahijanBold.ttf'
                size_hint_x: 0.4
                color:210 / 255, 141 / 255, 26 / 255, 1
                size_hint_y: None
                height: self.texture_size[1]
            MDTextField:
                id: username
                icon_right: "account"
                size_hint_x: 0.4
                line_color_normal: 210 / 255, 141 / 255, 26 / 255, 1
                icon_color: 1, 1, 1, 1
                font_size: "18sp"
                font_name:'resources/bahijanBold.ttf'
                pos_hint: {"center_x": 0.5}
                line_color_focus: 210 / 255, 141 / 255, 26 / 255, 1
            MDLabel: 
                text:app.arabicText('كلمة المرور')
                pos_hint: {"center_x": 0.5}
                font_name:'resources/bahijanBold.ttf'
                size_hint_x: 0.4
                color:210 / 255, 141 / 255, 26 / 255, 1
                size_hint_y: None
                height: self.texture_size[1]
            MDTextField:
                id: password
                icon_right: "eye-off"
                size_hint_x: 0.4
                line_color_normal: 210 / 255, 141 / 255, 26 / 255, 1 
                icon_color:  0.984, 0.306, 0.196, 1  
                font_size: "18sp"
                font_name: "resources/bahijanBold.ttf"
                pos_hint: {"center_x": 0.5}
                hint_text_color: 0.909, 0.667, 0.259, 1   
                line_color_focus:210 / 255, 141 / 255, 26 / 255, 1
                password:True
            
            MDRectangleFlatIconButton:
                text: app.arabicText('تسجيل دخول')
                icon_right: "account"
                theme_text_color: "Custom"
                icon_color: 1, 1, 1, 1  # Set the icon color to white
                font_size:"20sp"
                pos_hint: {"center_x": 0.5}
                line_color:210 / 255, 141 / 255, 26 / 255, 1  # Equivalent to #fb4e32
                md_bg_color:210 / 255, 141 / 255, 26 / 255, 1
                text_color:10 / 255, 16 / 255, 37 / 255, 1
                size_hint_x: 0.4
                font_name:'resources/bahijanBold.ttf'
                on_press: app.login()
            


